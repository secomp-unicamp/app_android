<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.secomp.mobile.about.AboutFragment" >

    <ImageView
        android:id="@+id/secompImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="aaa"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/twitterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secompImageView"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/twitter" />

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/facebookImageView"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/copyleftTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/versionTextView"
        android:gravity="center_horizontal"
        android:text="@string/label_copyleft"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/licenseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/copyleftTextView"
        android:gravity="center_horizontal"
        android:text="@string/label_license"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/otherTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/licenseTextView"
        android:gravity="center_horizontal"
        android:text="@string/label_other"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/facebookImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/twitterImageView"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/twitterImageView"
        android:clickable="true"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/githubImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secompImageView"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/twitterImageView"
        android:clickable="true"
        android:src="@drawable/github" />

</RelativeLayout>